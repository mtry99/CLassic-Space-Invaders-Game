<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:background="#F3EBEB">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                        android:id="@+id/pagecontrol"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal" android:visibility="visible">

                        <Button
                                android:text="-"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/pagedown"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp" android:layout_marginRight="10dp"
                                android:textSize="20sp"
                                android:enabled="true"/>

                        <TextView
                                android:text="|"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView3"
                                android:layout_weight="1"
                                android:textSize="30sp" android:textColor="#090909" android:textStyle="bold"/>
                        <Button
                                android:text="+"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/pageup" android:layout_weight="1"
                                android:textSize="20sp" android:layout_marginLeft="10dp"/>
                        <TextView
                                android:text="Page 1/3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/pagenum" android:textSize="20sp"
                                android:layout_marginLeft="50dp" android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/pdfLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" android:visibility="visible">
                </LinearLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>